<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.HomeFragment">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME BACK"
        android:textSize="14sp"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alexandra"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textColor="#000000" />

    <!-- Feature Image and Motivational Message -->
    <ImageView
        android:id="@+id/feature_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/feature_image"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/feature_image" />

    <TextView
        android:id="@+id/motivation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Focus your Mood, Train your Body"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#D32F2F"
        android:padding="16dp"
        android:layout_marginTop="-60dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/sub_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep going! You're doing great!"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="#D32F2F"
        android:paddingBottom="8dp"
        android:layout_marginTop="-8dp"
        android:gravity="center" />

    <!-- Today's Stats Section -->
    <TextView
        android:id="@+id/todays_stats_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Stats"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Left Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginEnd="8dp">

            <!-- Pink Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:background="#FFCDD2"
                android:padding="16dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/training_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.7 Hours"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/training_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Training Time"
                    android:textSize="14sp"
                    android:textColor="#888888" />
            </LinearLayout>

            <!-- Yellow Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:background="#FFE0B2"
                android:padding="16dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/exercises_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 Exercise"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/exercises_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sessions Complete"
                    android:textSize="14sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="8dp">

            <!-- Blue Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#B2DFDB"
                android:padding="16dp">

                <TextView
                    android:id="@+id/calories_burned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,565 kcal"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/calories_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories Burned"
                    android:textSize="14sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
